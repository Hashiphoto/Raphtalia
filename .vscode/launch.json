  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ts-node",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "args": ["${workspaceFolder}/src/Bot.ts"],
      "preLaunchTask": "devConnectToDb",
      "postDebugTask": "devDisconnectFromDb",
      "env": {
        "NODE_ENV": "dev"
      },
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
